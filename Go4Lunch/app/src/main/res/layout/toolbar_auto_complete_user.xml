<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_search_user"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            style="@style/ToolbarStyle">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true" >
            
            <AutoCompleteTextView
                android:id="@+id/auto_complete_text_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/autocomplete_margin_top"
                android:layout_marginEnd="@dimen/autocomplete_margin_end"
                android:layout_marginBottom="@dimen/autocomplete_margin_bottom"
                style="@style/AutoCompleteTextStyle"
                />


                <ImageView
                    android:id="@+id/search_image_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_search_grey_24dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/autocomplete_search_icon_margin_start"
                    android:layout_marginTop="@dimen/autocomplete_search_icon_margin_top"/>

                <ImageView
                    android:id="@+id/voice_image_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_settings_voice_grey_24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/autocomplete_voice_icon_margin_top"
                    android:layout_marginEnd="@dimen/autocomplete_voice_icon_margin_end"/>
            </RelativeLayout>

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

</android.support.constraint.ConstraintLayout>