<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/user_joining_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/lunch_time"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/user_text_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marco is joinin"
        app:layout_constraintStart_toEndOf="@id/user_joining_image"
        app:layout_constraintTop_toTopOf="@id/user_joining_image"
        app:layout_constraintBottom_toBottomOf="@id/user_joining_image"
        android:layout_marginStart="15dp"/>

</android.support.constraint.ConstraintLayout>