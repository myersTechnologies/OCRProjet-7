<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/radius_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/delete_choosed_lunch"
        android:hint="@string/search_zone_hint"
        style="@style/SettingsEditTextStyle"
       />

    <Button
        android:id="@+id/delete_choosed_lunch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/delete_user_button"
        app:layout_constraintTop_toBottomOf="@id/radius_editText"
        android:text="@string/delete_lunch"
        style="@style/ButtonSettingsStyle"
        />

    <Button
        android:id="@+id/delete_user_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/delete_account"
        style="@style/ButtonSettingsStyle"/>



</android.support.constraint.ConstraintLayout>