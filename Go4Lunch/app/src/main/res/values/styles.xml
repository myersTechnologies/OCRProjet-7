<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="titleTextColor">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="YellowBackground">
        <item name="android:background">@color/quantum_yellow50</item>
    </style>

    <style name="MainTextStyleTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/main_text_title_size</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/app_name</item>
    </style>

    <style name="MainTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/main_text</item>
    </style>

    <style name="MainLoginFbText">
        <item name="android:textSize">@dimen/main_facebook_login_text_size</item>
    </style>

    <style name="AutoCompleteTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/autocomplete_text_size</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/white</item>
        <item name="android:inputType">textAutoComplete|textAutoCorrect</item>
        <item name="android:hint">@string/search_restaurant_text</item>
        <item name="android:imeOptions">actionSearch</item>
    </style>

    <style name="NavigationViewTheme">
        <item name="android:background">@color/colorPrimary</item>

    </style>

    <style name="MessageTextChatInfo">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/autocomplete_text_size</item>
    </style>

    <style name="MessageTextChatStyleText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/main_text_size</item>
    </style>

    <style name="MessageTextChatStyleBold">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal|bold</item>
    </style>

    <style name="UsersDetailsActivityTheme">
        <item name="android:textSize">@dimen/user_details_text_size</item>
    </style>

    <style name="UsersDetailsActivityTheme.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PlacesListStyleTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/places_list_title</item>
        <item name="android:maxLength">@integer/max_length_places_title</item>
    </style>

    <style name="PlacesListStyleText">
        <item name="android:textSize">@dimen/places_list_text</item>
    </style>

    <style name="PlacesListStyleText.Italic">
        <item name="android:textStyle">italic</item>
    </style>
    <style name="RestaurantInfoStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RestaurantInfoStyle.Big">
        <item name="android:textSize">@dimen/restaurant_info_title</item>
        <item name="android:maxWidth">@dimen/max_length_places_Restaurant_title</item>
    </style>

    <style name="RestaurantInfoStyle.Small">
        <item name="android:textSize">@dimen/main_text_size</item>
    </style>

    <style name="NavHeaderStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NavHeaderStyle.View">
        <item name="android:gravity">bottom</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/app_img</item>
    </style>

    <style name="NavHeaderStyle.Title">
        <item name="android:textSize">@dimen/nav_header_title</item>
        <item name="android:text">@string/app_name</item>
    </style>

    <style name="NavHeaderStyle.Text">
        <item name="android:textSize">@dimen/places_list_text</item>
    </style>

    <style name="BottomNavigationStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="titleTextColor">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="SettingsEditTextStyle">
        <item name="android:background">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:inputType">number</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:hint">@string/search_zone_hint</item>
    </style>

    <style name="SettingsImageView">
        <item name="android:layout_gravity">center</item>

    </style>

    <style name="SettingsTextView">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonSettingsStyle">
        <item name="android:background">@color/white</item>
        <item name="android:textSize">@dimen/user_details_text_size</item>
    </style>

    <style name="Base.Widget.AppCompat.RatingBar.Small.Go4Lunch">
        <item name="android:numStars">@integer/rating_bar_star_number</item>
    </style>

    <style name="ChatEditTextStyle">
        <item name="android:hint">@string/chat_hint</item>
        <item name="android:textSize">@dimen/autocomplete_text_size</item>
        <item name="android:maxWidth">@dimen/edit_text_max_words</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_weight">@integer/layout_weight</item>
    </style>


</resources>
